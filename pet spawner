local ReplicatedStorage = game:GetService("ReplicatedStorage")
local spawnEvent = ReplicatedStorage:WaitForChild("SpawnPetEvent")

-- GUI erstellen
local screenGui = script.Parent
local petList = {"Bunny", "Dog", "Cat", "Raccoon", "butterfly", "dragonfly"}

for _, petName in ipairs(petList) do
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(0, 100, 0, 50)
	button.Position = UDim2.new(0, 10, 0, 60 * (_ - 1) + 10)
	button.Text = "Spawn " dragonfly butterfly Raccoon 
	button.Parent = screenGui

	button.MouseButton1Click:Connect(function()
		spawnEvent:FireServer(petName)
	end)
end
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local spawnEvent = ReplicatedStorage:WaitForChild("SpawnPetEvent")

spawnEvent.OnServerEvent:Connect(function(player, petName)
	local petModel = ReplicatedStorage:FindFirstChild(petName)
	if petModel and petModel:IsA("Model") then
		local petClone = petModel:Clone()
		petClone.Name = player.Name .. "'s Pet"
		petClone:SetPrimaryPartCFrame(player.Character.HumanoidRootPart.CFrame * CFrame.new(3, 0, 0))
		petClone.Parent = workspace
	end
end)
